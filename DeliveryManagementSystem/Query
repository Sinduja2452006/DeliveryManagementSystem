CREATE TABLE DELIVERY_TB (
    DELIVERYID      VARCHAR2(12 BYTE) PRIMARY KEY,
    DELIVERYPERSON  VARCHAR2(50 BYTE) NOT NULL,
    CUSTOMERNAME    VARCHAR2(50 BYTE) NOT NULL,
    DELIVERYITEM    VARCHAR2(50 BYTE) NOT NULL,
    DELIVERY_DATE   DATE NOT NULL,
    STATUS          VARCHAR2(20 BYTE),
    REMARKS         VARCHAR2(100 BYTE)
);

CREATE SEQUENCE DELIVERY_SEQ
START WITH 10
INCREMENT BY 1
MAXVALUE 99;
